/*推荐详情  */
.discounts_label {
  box-shadow: 0px 0px 8px rgba(100, 100, 100, 0.1);
  border: 1px solid #e4e7ed;
  border-radius: 6px;
  height: 75px;
  padding: 8px 0px;
  text-align: center;
}
.discounts_label>view {
  height: 50%;
  line-height: 30px;
}
.discounts_icon {
  background-color: #fff1e8;
  font-size: 12px;
  width: 40px;
  height: 20px;
  text-align: center;
  display: inline-block;
  line-height: 20px;
  vertical-align: center;
  margin-right: 10px;
  border-radius: 4px;
}
.recommend_title {
  font-weight: 700;
  background-color: #f7f7f7;
  padding-left: 15px;
  line-height: 44px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  color: #333333;
  font-size: 15px;
}
.recommend_map {
  width: 100%;
  height: 170px;
  background-color: #000;
}
.map_item {
  font-size: 13px;
  color: #666666;
}

.to_more_data {
  text-align: center;
  color: #fd7801;
  background-color: #fff7ef;
  font-size:  14px;
  height: 40px;
  line-height: 40px;
  margin-left: 30px;
  margin-right: 30px;
}
.recommend_title_more{
  color: #0078ff;
  font-weight: normal;
  padding-right: 15px;
}
.recommend_title image {
  width: 6px;
  height: 10px;
  vertical-align: middle;
  margin-bottom: 2px;
  margin-left: 5px;
}
.estate_photo {
  padding-top: 20px;
  padding-bottom: 20px;
  padding-right: 5px !important;
}
.estate_photo view {
  width: 33.3%;
  height: 75px;
  float: left;
  padding-right: 10px;
}
.estate_photo image {
  background-color: #000;
  width: 100%;
  height: 100%;
}
.discounts_inform {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-bottom: 2px;
  margin-right: 8px;
}



/* 户型详情 */
.house_type_price {
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 15px;
}