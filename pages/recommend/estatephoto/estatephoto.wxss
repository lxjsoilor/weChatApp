/* pages/swiper/swiper.wxss */
page {
  background-color: #fff;
}
.img_box {
  width: 100px;
  float: left;
  height: 80px;
}
.img_box image {
  width: 100px;
  height: 80px;
}


.swiper_box_bg {
  width: 100%;
  height: 100%;
  background-color: #222222;
  position: fixed;
  left: 0px;
  top: 0px;
   /* display: none;  */
}
.swiper_box {
  position: relative;
  left: 0px;
  top: 50%;
  transform: translateY(-50%);
}

.slide-image {
  width: 100%;
}

.swiper_bar {
  width: 100%;
  background-color: #222222;
  position: fixed;
  bottom: 0px;
  left: 0px;
  overflow: scroll;
  height: 50px;
}
.swiper_bar_item {
  float: left;
  width: 100px;
  color: #fff;
  line-height: 50px;
  text-align: center;
  font-size: 14px;
}
.swiper_bar_item.current {
  color: #ff824c;
}
.swiper_bar_box {
  width: 700px;
}
.swiper_bar_item text {
  border: 1px solid #222222;
  padding: 4px 10px;
  border-radius: 30px;
}
.swiper_bar_item.current text {
  border-color: #ff824c;
}





.img_item {
  width: 33%;
  height: 80px;
  /* background-color: #000; */
  float: left;
  padding-right: 10px;
  margin-bottom: 10px;
}

.img_item image {
  width: 100%;
  height: 100%;
   /* background-color: #000;  */
}

.img_item_type {
  font-size: 14px;
  color: #999999;
  height: 30px;
  line-height: 20px;
  clear: both;
}

.preview-indicator {
  line-height: 25px;
  color: #fff;
  text-align: center;
  background-color: rgba(34, 34, 34, 0.4);
  border-radius: 12px;
  font-size: 16px;
  width: 100%;
  position: absolute;
  bottom: 70px;
}